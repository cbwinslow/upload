{
  "agent_name": "Code Analysis Agent",
  "agent_type": "development",
  "version": "1.0.0",
  "description": "Specialized agent for comprehensive code analysis, security auditing, and quality assessment",
  "capabilities": [
    "static_code_analysis",
    "security_vulnerability_scanning",
    "code_quality_assessment",
    "performance_analysis",
    "documentation_generation",
    "refactoring_suggestions"
  ],
  "tools": [
    "code_analysis",
    "file_operations",
    "data_processing"
  ],
  "toolsets": [
    "code_development"
  ],
  "configuration": {
    "analysis_depth": "deep",
    "supported_languages": [
      "python",
      "javascript",
      "typescript",
      "java",
      "cpp",
      "c",
      "go",
      "rust"
    ],
    "security_scan_level": "comprehensive",
    "performance_analysis": true,
    "complexity_threshold": 10,
    "max_file_size_mb": 50,
    "exclude_patterns": [
      "node_modules/**",
      "*.min.js",
      "vendor/**",
      "*.test.*",
      "test/**"
    ]
  },
  "behavior": {
    "analysis_approach": "systematic",
    "security_focus": "high",
    "quality_standards": "industry_best_practices",
    "recommendation_priority": "security_first",
    "documentation_style": "comprehensive"
  },
  "output_format": {
    "default": "detailed_report",
    "alternatives": [
      "executive_summary",
      "security_focused",
      "performance_focused",
      "quick_scan"
    ]
  },
  "analysis_parameters": {
    "security_rules": {
      "critical": [
        "sql_injection",
        "xss_vulnerabilities",
        "hardcoded_secrets",
        "insecure_deserialization",
        "path_traversal"
      ],
      "high": [
        "weak_cryptography",
        "improper_input_validation",
        "information_disclosure",
        "broken_authentication"
      ],
      "medium": [
        "security_misconfiguration",
        "insufficient_logging",
        "outdated_dependencies"
      ]
    },
    "quality_metrics": {
      "complexity_analysis": true,
      "duplication_detection": true,
      "test_coverage_analysis": true,
      "documentation_coverage": true,
      "code_style_checking": true
    },
    "performance_metrics": {
      "algorithmic_complexity": true,
      "resource_usage_analysis": true,
      "bottleneck_detection": true,
      "memory_leak_detection": true
    }
  },
  "safety_constraints": {
    "read_only_access": true,
    "no_code_modification": true,
    "respect_gitignore": true,
    "sensitive_data_protection": true,
    "private_code_handling": "secure"
  },
  "memory_management": {
    "max_analysis_memory_mb": 1024,
    "cache_analysis_results": true,
    "incremental_analysis": true,
    "cleanup_temp_files": true
  },
  "error_handling": {
    "graceful_degradation": true,
    "partial_analysis_allowed": true,
    "error_categorization": true,
    "recovery_strategies": [
      "skip_problematic_files",
      "reduce_analysis_depth",
      "use_alternative_methods"
    ]
  },
  "reporting": {
    "include_code_snippets": true,
    "severity_classification": true,
    "recommendation_priority": true,
    "fix_suggestions": true,
    "effort_estimation": true
  },
  "integration_points": {
    "version_control": [
      "git",
      "svn",
      "mercurial"
    ],
    "ci_cd_platforms": [
      "jenkins",
      "github_actions",
      "gitlab_ci",
      "azure_devops"
    ],
    "security_tools": [
      "sonarqube",
      "snyk",
      "owasp_zap",
      "bandit"
    ],
    "code_quality_tools": [
      "eslint",
      "pylint",
      "checkstyle",
      "rubocop"
    ]
  },
  "custom_rules": {
    "security": [
      {
        "name": "custom_secret_detection",
        "pattern": "(?i)(password|secret|key|token)\\s*=\\s*[\"'][^\"']+[\"']",
        "severity": "high",
        "description": "Potential hardcoded secret detected"
      }
    ],
    "quality": [
      {
        "name": "function_length_check",
        "max_lines": 50,
        "severity": "medium",
        "description": "Function exceeds recommended length"
      }
    ]
  },
  "notification_settings": {
    "critical_issues": "immediate",
    "high_issues": "summary",
    "medium_issues": "daily_digest",
    "low_issues": "weekly_report"
  },
  "version_history": [
    {
      "version": "1.0.0",
      "date": "2025-11-12",
      "changes": "Initial release with comprehensive code analysis capabilities"
    }
  ],
  "maintenance": {
    "last_updated": "2025-11-12",
    "next_review": "2025-12-12",
    "update_frequency": "monthly",
    "rule_updates": "weekly"
  }
}